<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/linearLayout86">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Recommendation"
                android:textSize="20dp"
                android:background="@color/black"
                android:textColor="@color/sunflower"
                android:textStyle="normal"
                android:gravity="center"
                android:id="@+id/textView58" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/linearLayout86"
            android:layout_centerHorizontal="true"
            android:id="@+id/linearLayout87">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="20dp"
                android:textStyle="normal"
                android:gravity="center"
                android:id="@+id/RECOMMENDATION" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/linearLayout87"
            android:layout_centerHorizontal="true"
            android:id="@+id/linearLayout88">

            <TextView
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:text="Grade"
                android:textSize="20dp"
                android:background="@color/black"
                android:textColor="@color/sunflower"
                android:textStyle="normal"
                android:gravity="center"
                android:id="@+id/textView61" />

            <TextView
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:text="Type"
                android:textSize="20dp"
                android:textStyle="normal"
                android:background="@color/black"
                android:textColor="@color/sunflower"
                android:gravity="center"
                android:id="@+id/textView62" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="20dp"
                android:textStyle="normal"
                android:background="@color/black"
                android:textColor="@color/sunflower"
                android:gravity="center"
                android:text="Priority"
                android:id="@+id/textView63" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/linearLayout88"
            android:layout_centerHorizontal="true">

            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:id="@+id/GRADE"
                android:indeterminate="false" />

            <TextView
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:textSize="20dp"
                android:textStyle="normal"
                android:gravity="center"
                android:id="@+id/TYPE" />

            <TextView
                android:layout_width="match_parent"
                android:textSize="20dp"
                android:textStyle="normal"
                android:gravity="center"
                android:layout_height="match_parent"
                android:id="@+id/PRIORITY" />
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/DATA"
        android:visibility="invisible" />
</LinearLayout>
